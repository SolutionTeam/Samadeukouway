{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_registration_register') }}"  method="POST" class="fos_user_registration_register">
    {{ form_start(form) }}
    {{ form_errors(form) }}
    <h5>Informations sur le profil</h5>
    {{ form_widget(form.prenom,{'attr': {'placeholder': "Prenom" }}) }}
    {{ form_widget(form.nom,{'attr': {'placeholder': "Nom" }}) }}
   
    <h6>Informations de connexion</h6>
    {{ form_widget(form.email,{'attr': {'placeholder': "Email" }}) }}<br>
    {{ form_widget(form.username,{'attr': {'placeholder': "Nom d'utilisateur" }}) }}
    {{ form_widget(form.plainPassword.first,{'attr': {'placeholder': "Mot de passe" }}) }}
    {{ form_widget(form.plainPassword.second,{'attr': {'placeholder': "Confirmation mot de passe" }}) }}
     <input type="submit" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}" />
    {{ form_end(form) }}
   
</form>